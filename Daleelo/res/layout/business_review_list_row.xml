<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/business_review_REL_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/business_review_IMG_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_one_star" />

        <TextView
            android:id="@+id/business_review_TXT_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business_review_IMG_phone"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" 
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/imageView1"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/business_review_TXT_posted_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business_review_TXT_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15dp" 
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/imageView1"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/business_review_TXT_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business_review_TXT_posted_on"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="#000000" 
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/imageView1"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />

    </RelativeLayout>

</RelativeLayout>