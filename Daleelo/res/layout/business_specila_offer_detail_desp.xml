<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_light_blue" >

        <RelativeLayout
            android:id="@+id/business_special_REL_title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_title" >

            <TextView
                android:id="@+id/business_special_TXT_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Special Offer"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/business_special_REL_title" >

            <LinearLayout
                android:id="@+id/business_special_REL_desp_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" >

                <RelativeLayout
                    android:id="@+id/business_special_REL_desp_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rect" >

                    <RelativeLayout
                        android:id="@+id/business_special_REL_desp_address"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/business_special_TXT_desp_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:text="TextView"
                            android:textColor="#C9811C"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/business_special_TXT_desp_address"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/business_special_TXT_desp_name"
                            android:layout_below="@+id/business_special_TXT_desp_name"
                            android:layout_marginTop="3dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/business_special_TXT_desp_phone_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/business_special_TXT_desp_address"
                            android:layout_below="@+id/business_special_TXT_desp_address"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/icon_phone" />

                        <TextView
                            android:id="@+id/business_special_TXT_desp_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/business_special_TXT_desp_address"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@+id/business_special_TXT_desp_phone_image"
                            android:text="7396718033"
                            android:textColor="#C9811C" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/business_special_REL_desp_four"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_rect_dark" >

                    <RelativeLayout
                        android:id="@+id/business_special_REL_hour_operation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="160dp"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/business_special_TXT_offer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/business_special_IMG_offer_img"
                            android:layout_marginLeft="10dp"
                            android:text="Hours of Operation"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/business_special_TXT_offer_desp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/business_special_TXT_offer_name"
                            android:layout_below="@+id/business_special_TXT_offer_name"
                            android:layout_marginTop="20dp"
                            android:text="Payments Methods Accepted"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/business_special_IMG_offer_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/img_icon_deal_yellow" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/business_special_VIEW_hour_pay_seperator"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/business_special_REL_hour_operation"
                        android:background="#000000" />

                    <RelativeLayout
                        android:id="@+id/business_special_REL_pay_option"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/business_special_VIEW_hour_pay_seperator"
                        android:background="@drawable/bg_half_rect_black"
                        android:gravity="center" >

                        <LinearLayout
                            android:id="@+id/business_special_REL_pay_option"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageButton
                                android:id="@+id/business_special_IMGB_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/icon_share" />

                            <ImageButton
                                android:id="@+id/business_special_IMGB_save"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="14dp"
                                android:background="@drawable/icon_save" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <include
        android:id="@+id/give_desc_REL_share"
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        layout="@layout/description_share_layout"
        android:visibility="gone" />

</RelativeLayout>