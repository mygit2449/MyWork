<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_light_blue" >

    <RelativeLayout
        android:id="@+id/business_review_REL_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_title" >

        <TextView
            android:id="@+id/business_review_TXT_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Business Name"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/business_review_IMGB_right"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/right_arrow" />

        <ImageButton
            android:id="@+id/business_review_IMGB_left"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/business_review_IMGB_right"
            android:background="@drawable/left_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/business_review_REL_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_review_REL_title"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/business_review_IMG_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_one_star" />

        <TextView
            android:id="@+id/business_review_TXT_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/business_review_IMG_phone"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/imageView1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/business_review_TXT_posted_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/business_review_TXT_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/imageView1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/grey"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/business_review_TXT_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/business_review_TXT_posted_on"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/imageView1"
            android:text="TextView"
            android:textColor="#000000" />
    </RelativeLayout>

</RelativeLayout>