<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/twitter_post_LIN_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:visibility="invisible" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_bg" >

        <RelativeLayout
            android:id="@+id/twitter_post_REL_title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_title" >

            <TextView
                android:id="@+id/twitter_post_TXT_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/twitter_post_BTN_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_bg_blue"
                android:text="Tweet"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/twitter_post_BTN_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_bg_blue"
                android:text="Cancel"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/twitter_post_TXT_post_text_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:text="140"
            android:textColor="#0000ff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/twitter_post_ET_post_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/twitter_post_REL_title"
            android:gravity="top"
            android:padding="5dp" />
    </RelativeLayout>

</LinearLayout>