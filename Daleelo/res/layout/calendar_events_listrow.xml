<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/calendar_events_listrow_REL_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <Button
            android:id="@+id/calendar_events_listrow_BTN_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/btn_icon_delete"
            android:text="Delete"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/calendar_events_listrow_REL_delete"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/calendar_events_listrow_IMG_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/calendar_events_listrow_TXT_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/calendar_events_listrow_IMG_dot"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/calendar_events_listrow_TXT_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar_events_listrow_TXT_time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/calendar_events_listrow_IMG_dot"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/calendar_events_listrow_TXT_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/calendar_events_listrow_IMG_arrow"
            android:layout_toRightOf="@+id/calendar_events_listrow_TXT_time"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/calendar_events_listrow_IMG_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />
    </RelativeLayout>

</RelativeLayout>