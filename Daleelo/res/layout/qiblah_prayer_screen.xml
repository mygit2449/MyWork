<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="fill_parent"  
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/qiblah_REL_title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_title" >

            <ImageButton
                android:id="@+id/qiblah_IMGBTN_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:src="@drawable/icon_settings" />

            <TextView
                android:id="@+id/qiblah_TXT_maintitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Qiblah &amp; Prayer Times"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qiblah_REL_business_items"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/qiblah_REL_title"
            android:background="@drawable/bg_footer" >

            <ImageButton
                android:id="@+id/qiblah_IMGBTN_masjid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:src="@drawable/icom_masajid_compass" />

            <ImageButton
                android:id="@+id/qiblah_IMGBTN_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:src="@drawable/icon_calendar_compass" />

            <TextView
                android:id="@+id/qiblah_TXT_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/qiblah_IMGBTN_masjid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Tuesday"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qiblah_TXT_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qiblah_TXT_weekday"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="January 10, 2012/Safar 5, 1432"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qiblah_REL_prayer_times"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/qiblah_LIN_bottom_tab"
            android:layout_below="@+id/qiblah_REL_business_items"
            android:background="@drawable/bg_qiblah" >

            <LinearLayout
                android:id="@+id/qiblah_REL_compass"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"/>

            <RelativeLayout
                android:id="@+id/qiblah_REL_prayer_time"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/qiblah_LIN_prayer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/qiblah_LIN_prayer_time_fajr"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/qiblah_TXT_fajr_label"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Fajr"
                            android:textColor="#000000"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/qiblah_TXT_fajr_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qiblah_LIN_prayer_time_shuruq"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/qiblah_TXT_shuruq_label"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Shuruq"
                            android:textColor="#000000"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/qiblah_TXT_shuruq_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qiblah_LIN_prayer_time_dhuhr"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/qiblah_TXT_dhuhr_label"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Dhuhr"
                            android:textColor="#000000"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/qiblah_TXT_dhuhr_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qiblah_LIN_prayer_time_asr"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/qiblah_TXT_asr_label"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Asr"
                            android:textColor="#000000"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/qiblah_TXT_asr_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qiblah_LIN_prayer_time_maghrib"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/qiblah_TXT_maghrib_label"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Maghrib"
                            android:textColor="#000000"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/qiblah_TXT_maghrib_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qiblah_LIN_prayer_time_isha"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/qiblah_TXT_isha_label"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Isha"
                            android:textColor="#000000"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/qiblah_TXT_isha_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="13dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qiblah_LIN_bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_footer" >

            <TextView
                android:id="@+id/qiblah_TXT_calcmethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Egyptian General Authorothy of..."
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qiblah_TXT_remaintime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qiblah_TXT_calcmethod"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Time Remaining Until Next Prayer:"
                android:textColor="#ffffff"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/qiblah_TXT_remaintime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qiblah_TXT_remaintime_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="0.0"
                android:textColor="#ffffff"
                android:textSize="13dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>