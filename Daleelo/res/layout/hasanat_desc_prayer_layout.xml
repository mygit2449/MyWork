<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_light_blue" >

        <RelativeLayout
            android:id="@+id/hasanat_desc_prayer_REL_title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_title"
            android:padding="10dp" >
            <TextView
                android:id="@+id/hasanat_desc_prayer_TXT_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>
        
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical" 
		    android:gravity="center_horizontal"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp"
		    android:layout_below="@+id/hasanat_desc_prayer_REL_title">
			<LinearLayout
                android:id="@+id/hasanat_desc_prayer_LIN_time_fajr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_fajr_label"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Fajr"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_fajr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:30 am"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hasanat_desc_prayer_LIN_time_shuruq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_shuruq_label"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Shuruq"
                    android:textColor="#000000"
                    android:textSize="30dp" 
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_shuruq_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:30 am"
                    android:textColor="#000000"
                    android:textSize="30dp" 
                    android:textStyle="italic"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hasanat_desc_prayer_LIN_time_dhuhr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                 >

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_dhuhr_label"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Dhuhr"
                    android:textColor="#000000"
                    android:textSize="30dp" 
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_dhuhr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:33 pm"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hasanat_desc_prayer_LIN_time_asr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_asr_label"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Asr"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_asr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:18 pm"
                    android:textColor="#000000"
                    android:textSize="30dp" 
                    android:textStyle="italic"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hasanat_desc_prayer_LIN_time_maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_maghrib_label"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Maghrib"
                    android:textColor="#000000"
                    android:textSize="30dp" 
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_maghrib_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:36 pm"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hasanat_desc_prayer_LIN_time_isha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_isha_label"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Isha"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/hasanat_desc_prayer_TXT_isha_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:04 pm"
                    android:textColor="#000000"
                    android:textSize="30dp" 
                    android:textStyle="italic"/>
            </LinearLayout>
		</LinearLayout>
		
	</RelativeLayout>
</RelativeLayout>	    