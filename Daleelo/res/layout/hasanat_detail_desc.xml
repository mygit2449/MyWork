<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_light_blue" >

        <RelativeLayout
            android:id="@+id/hasanat_desc_REL_title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_title" >

            <TextView
                android:id="@+id/hasanat_desc_TXT_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Deal Name"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hasanat_desc_REL_serach"
            android:layout_below="@+id/hasanat_desc_REL_title" >

            <RelativeLayout
                android:id="@+id/hasanat_REL_desc_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <RelativeLayout
                    android:id="@+id/hasanat_REL_desc_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rect" >

                    <RelativeLayout
                        android:id="@+id/hasanat_descREL_desc_address"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <TextView
                            android:id="@+id/hasanat_desc_TXT_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="TextView"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hasanat_desc_TXT_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/hasanat_desc_TXT_name"
                            android:layout_below="@+id/hasanat_desc_TXT_name"
                            android:layout_marginTop="3dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/hasanat_desc_TXT_phone_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/hasanat_desc_TXT_address"
                            android:layout_below="@+id/hasanat_desc_TXT_address"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/icon_phone" />

                        <TextView
                            android:id="@+id/hasanat_desc_TXT_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hasanat_desc_TXT_address"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@+id/hasanat_desc_TXT_phone_image"
                            android:text="7396718033"
                            android:textColor="#000000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hasanat_REL_desc_call_btns"
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:layout_below="@+id/hasanat_descREL_desc_address"
                        android:background="@drawable/bg_half_rect_black" >

                        <ImageButton
                            android:id="@+id/hasanat_desc_IMGB_call"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/icon_call_btn" />

                        <Button
                            android:id="@+id/hasanat_desc_BTN_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/hasanat_desc_BTN_direction"
                            android:background="@drawable/icon_map" />

                        <Button
                            android:id="@+id/hasanat_desc_BTN_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/hasanat_desc_BTN_share"
                            android:background="@drawable/icon_direction" />

                        <Button
                            android:id="@+id/hasanat_desc_BTN_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/hasanat_desc_BTN_save"
                            android:background="@drawable/icon_share" />

                        <Button
                            android:id="@+id/hasanat_desc_BTN_save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/icon_save" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/hasanat_REL_desc_two"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hasanat_REL_desc_address"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_rect" >

                    <RelativeLayout
                        android:id="@+id/hasanat_REL_desc_basic"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/hasanat_desc_TXT_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Basic Information"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:id="@+id/hasanat_REL_desc_imam"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/hasanat_desc_TXT_title"
                            android:layout_below="@+id/hasanat_desc_TXT_title"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/hasanat_REL_desc_denomination" >

                            <TextView
                                android:id="@+id/hasanat_desc_TXT_imamtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Imam : "
                                android:textColor="#000000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/hasanat_desc_TXT_imam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/hasanat_desc_TXT_imamtitle"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text=" "
                                android:textColor="#000000"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/hasanat_REL_desc_demo"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/hasanat_REL_desc_imam"
                            android:layout_below="@+id/hasanat_REL_desc_imam"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/hasanat_REL_desc_language" >

                            <TextView
                                android:id="@+id/hasanat_desc_TXT_demograghicslabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Demographics : "
                                android:textColor="#000000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/hasanat_desc_TXT_demograghics"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/hasanat_desc_TXT_demograghicslabel"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text=" "
                                android:textColor="#000000"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/hasanat_REL_desc_denomination"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/hasanat_desc_TXT_title"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="5dp" >

                            <TextView
                                android:id="@+id/hasanat_desc_TXT_denominationlabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Denomination : "
                                android:textColor="#000000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/hasanat_desc_TXT_denomination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/hasanat_desc_TXT_denominationlabel"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text=" "
                                android:textColor="#000000"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/hasanat_REL_desc_language"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/hasanat_REL_desc_denomination"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="5dp" >

                            <TextView
                                android:id="@+id/hasanat_desc_TXT_languagelabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Language Of Services:"
                                android:textColor="#000000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/hasanat_desc_TXT_language"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/hasanat_desc_TXT_languagelabel"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text=" "
                                android:textColor="#000000"
                                android:textSize="12dp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/seperator"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/hasanat_REL_desc_basic"
                        android:background="@color/black"
                        android:padding="10dp" />

                    <RelativeLayout
                        android:id="@+id/hasanat_REL_desc_services"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/seperator"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/hasanat_desc_TXT_servicestitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Services Provided"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hasanat_desc_TXT_services"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/hasanat_desc_TXT_servicestitle"
                            android:layout_below="@+id/hasanat_desc_TXT_servicestitle"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text=" "
                            android:textColor="#000000" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/hasanat_REL_desc_three"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hasanat_REL_desc_two"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_rect"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/hasanat_desc_TXT_announcemnettitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:text="Announcements"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/hasanat_desc_IMG_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hasanat_desc_TXT_announcemnettitle"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_calendar" />

                    <ImageView
                        android:id="@+id/hasanat_desc_IMG_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_arrow" />
                </RelativeLayout>

                <Button
                    android:id="@+id/hasanat_desc_BTN_donate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hasanat_REL_desc_three"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/donatenow" />

                <LinearLayout
                    android:id="@+id/hasanat_REL_desc_four"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hasanat_desc_BTN_donate"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_rect"
                    android:paddingBottom="5dp" >

                    <RelativeLayout
                        android:id="@+id/hasanat_desc_REL_prayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <Button
                            android:id="@+id/hasanat_desc_BTN_prayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/prayer_time_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hasanat_desc_BTN_prayer"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:text="Prayer Schedule"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hasanat_desc_REL_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <Button
                            android:id="@+id/hasanat_desc_BTN_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/photos_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hasanat_desc_BTN_photo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:text="Photo"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hasanat_desc_REL_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <Button
                            android:id="@+id/hasanat_desc_BTN_website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/website_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hasanat_desc_BTN_website"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:text="Website"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hasanat_desc_REL_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <Button
                            android:id="@+id/hasanat_desc_BTN_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/email_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hasanat_desc_BTN_email"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hasanat_desc_REL_moreinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <Button
                            android:id="@+id/hasanat_desc_BTN_moreinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/more_info_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hasanat_desc_BTN_moreinfo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:text="More Info"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/hasanat_desc_REL_serach"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_black_strip"
            android:gravity="center"
            android:padding="10dp" >

            <EditText
                android:id="@+id/business_TXT_serach"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/business_IMGB_home" />

            <ImageButton
                android:id="@+id/business_IMGB_home"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/business_IMGB_mystuff"
                android:background="@drawable/btn_icon_home"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/business_IMGB_mystuff"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_icon_folder"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/hasanat_desc_REL_share"
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        layout="@layout/description_share_layout"
        android:visibility="gone" />

</RelativeLayout>