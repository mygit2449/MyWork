<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="400dip"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_light_blue" >

        <RelativeLayout
            android:id="@+id/more_REL_moreTitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_title" >

            <TextView
                android:id="@+id/more_TXT_MoreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dip"
                android:layout_marginRight="100dip"
                android:layout_marginTop="5dip"
                android:text="More"
                android:textColor="@android:color/white"
                android:textSize="16dip"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/more_ScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_REL_moreTitle" >

            <RelativeLayout
                android:id="@+id/more_REL_listOfItems"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <!--
                <RelativeLayout
                    android:id="@+id/more_REL_presonalProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/more_TXT_personalProfile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="5dip"
                        android:text="Personal Profile"
                        android:textColor="@android:color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/more_View1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/more_REL_presonalProfile"
                    android:layout_marginTop="10dip"
                    android:background="@android:color/white" />
                -->

                <RelativeLayout
                    android:id="@+id/more_REL_CopyRight"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/more_TXT_copyRight"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/more_TXT_copyRightSimbol"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Â© Copyright"
                        android:textColor="@android:color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/more_View2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/more_REL_CopyRight"
                    android:background="@android:color/white" />

                <RelativeLayout
                    android:id="@+id/more_REL_privacypolicy"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/more_View2" >

                    <TextView
                        android:id="@+id/more_TXT_privacyPolicy"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Privacy Policy"
                        android:textColor="@android:color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/more_View3"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/more_REL_privacypolicy"
                    android:background="@android:color/white" />

                <RelativeLayout
                    android:id="@+id/more_REL_aboutUs"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/more_View3" >

                    <TextView
                        android:id="@+id/more_TXT_aboutUs"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="About Us"
                        android:textColor="@android:color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/more_View5"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/more_REL_aboutUs"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:id="@+id/more_REL_setRadius"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/more_View5" >

                    <TextView
                        android:id="@+id/more_TXT_setRadius"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Set Radius"
                        android:textColor="@android:color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/more_TXT_setRadius_data"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="5 Miles"
                        android:textColor="@android:color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" 
                        android:paddingRight="10dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/more_View6"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/more_REL_setRadius"
                    android:background="@android:color/white" />

                <RelativeLayout
                    android:id="@+id/more_REL_share"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/more_View6" >

                    <TextView
                        android:id="@+id/more_TXT_share"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Invite"
                        android:textColor="@android:color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/more_View7"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/more_REL_share"
                    android:background="@android:color/white" />

                <RelativeLayout
                    android:id="@+id/more_REL_questionsAndSuggestions"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/more_View7" >

                    <TextView
                        android:id="@+id/more_TXT_questionsAndSuggestions"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Questions and Suggestions"
                        android:textColor="@android:color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/more_View8"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/more_REL_questionsAndSuggestions"
                    android:background="@android:color/white" />

                <RelativeLayout
                    android:id="@+id/more_REL_FAQS"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/more_View8" >

                    <TextView
                        android:id="@+id/more_TXT_FAQS"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="FAQ&apos;S"
                        android:textColor="@android:color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/more_View9"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/more_REL_FAQS"
                    android:background="@android:color/white" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <include
        android:id="@+id/give_desc_REL_share"
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        layout="@layout/description_share_layout"
        android:visibility="gone" />

</RelativeLayout>