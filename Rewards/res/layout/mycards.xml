<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/mycards_header_REL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:padding="2dp" >

        <TextView
            android:id="@+id/messages_TXT_title"
            style="@style/headertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="My Cards" />

        <Button
            android:id="@+id/mycards_BTN_addcards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/add"
            android:onClick="onAddcardClick" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mycards_REL_details"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/mycards_header_REL"
        android:background="@drawable/bgfull" >
        
        
        <TextView 
            android:id="@+id/mycards_TXT_nocards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/nocardstext"
            android:text="@string/nocards"/>
    </RelativeLayout>

</RelativeLayout>