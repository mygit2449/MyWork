<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_email_list_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:id="@+id/search_email_list_row_Rel_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/search_email_listview_row_txt_Subject"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:singleLine="true"
            android:text="subject:"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/search_email_listview_row_txt_Datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="5dip"
            android:text="dateTime"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/search_email_listview_row_txt_Sender"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_email_listview_row_txt_Datetime"
            android:paddingLeft="10dip"
            android:paddingTop="7dip"
            android:text="sender"
            android:singleLine="true"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/search_email_listview_row_img_icon"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/search_email_listview_row_txt_Datetime"
            android:layout_marginTop="5dip" />

        <ImageView
            android:id="@+id/search_email_listview_row_img_attachment"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_below="@+id/search_email_listview_row_txt_Datetime"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:layout_toLeftOf="@+id/search_email_listview_row_img_icon"
            android:src="@drawable/attachment" />
    </RelativeLayout>

</RelativeLayout>