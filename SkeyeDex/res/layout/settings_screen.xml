<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray"
    android:gravity="center_horizontal" >

    <RelativeLayout
        android:id="@+id/Settings_relative_content"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <ScrollView
            android:id="@+id/SettingsView_scroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/black" >

            <RelativeLayout
                android:id="@+id/account_REL_settings"
                android:layout_width="fill_parent"
                android:layout_height="50dip" >

                <TextView
                    android:id="@+id/accounts_name_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="20dip"
                    android:text="Accounts"
                    android:textSize="20dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/accounts_img_ssettings"
                    android:layout_width="25dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="20dip"
                    android:src="@drawable/ic_menu_more" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/accounts_img_ssettings"
                    android:layout_marginTop="10dip"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:id="@+id/group_REL_settings"
                    android:layout_width="fill_parent"
                    android:layout_height="80dip"
                    android:layout_below="@+id/view1"
                    android:layout_marginBottom="10dip" >

                    <TextView
                        android:id="@+id/group_name_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="20dip"
                        android:text="Group Settings"
                        android:textSize="20dip"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/group_img_settings"
                        android:layout_width="25dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="20dip"
                        android:src="@drawable/ic_menu_more" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:paddingTop="20dip" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/proceed_home_REL"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_alignParentBottom="true"
            android:background="#666666" 
            android:visibility="gone">

            <Button
                android:id="@+id/proceed_home_BTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/proceed_home_btn" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>