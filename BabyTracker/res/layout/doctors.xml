<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/docrots_details_REL_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <include
                android:id="@+id/doctors_REL_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                layout="@layout/simple_top_bar" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/doctors_Scroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/docrots_details_REL_header"
            android:background="@drawable/bg" >

            <RelativeLayout
                android:id="@+id/doctors_details_REL"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/doctors_details_TXT_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="Enter Your Doctor details Here."
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/doctors_details_REL_doctorname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctors_details_TXT_heading"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/doctors_details_TXT_doctorname"
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Doctor Name: "
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/doctors_details_ETXT_doctorname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/doctors_details_TXT_doctorname"
                        android:background="@drawable/textfield"
                        android:hint="Doctor name*"
                        android:padding="5dp"
                        android:singleLine="true" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doctors_details_REL_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctors_details_REL_doctorname"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/doctors_details_TXT_phone"
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Phone number: "
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/doctors_details_ETXT_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/doctors_details_TXT_phone"
                        android:background="@drawable/textfield"
                        android:hint="Phone number*"
                        android:inputType="number"
                        android:padding="5dp"
                        android:singleLine="true" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doctors_details_REL_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctors_details_REL_phone"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/doctors_details_TXT_email"
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Email Id: "
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/doctors_details_ETXT_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/doctors_details_TXT_email"
                        android:background="@drawable/textfield"
                        android:hint="email id*"
                        android:padding="5dp"
                        android:singleLine="true" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doctors_details_REL_contactAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctors_details_REL_email"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/doctors_details_TXT_contactAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Address: "
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/doctors_details_ETXT_contactAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctors_details_TXT_contactAddress"
                        android:background="@drawable/textfield_purpose"
                        android:gravity="top"
                        android:hint="Contact Address*"
                        android:padding="5dp" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doctors_details_REL_workingHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctors_details_REL_contactAddress"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/doctors_details_TXT_workingaHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Working Hours: "
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <RelativeLayout
                        android:id="@+id/doctors_details_REL_working"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctors_details_TXT_workingaHours"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/doctors_details_TXT_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            android:text="From:"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/doctors_txt_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/doctors_details_TXT_from"
                            android:background="@drawable/textfield_time"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="from"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/doctors_details_TXT_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="2dp"
                            android:layout_toRightOf="@+id/doctors_txt_from"
                            android:text="To:"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/doctors_txt_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/doctors_details_TXT_to"
                            android:background="@drawable/textfield_time"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="to"
                            android:textColor="@android:color/black" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doctors_details_REL_buttons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctors_details_REL_workingHours"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:padding="5dip" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/doctors_details_BTN_add"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:background="@drawable/submit"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/doctors_details_BTN_clear"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:layout_toRightOf="@+id/doctors_details_BTN_add"
                            android:background="@drawable/clear" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doctors_details_LIN_babydetails4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctors_details_REL_workingHours"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:padding="5dip"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/doctors_details_BTN_save"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:background="@drawable/save" />

                        <Button
                            android:id="@+id/doctors_details_BTN_cancel"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:layout_toRightOf="@+id/doctorappointment_details_BTN_save"
                            android:background="@drawable/cancel" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>