<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/dailyactivity_childlayout_REL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:id="@+id/dailyactivity_childlayout_LIN_dailyactivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/dailyactivity_childlayout_REL_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/dailyactivity_childlayout_TXT_time"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:text="At:"
                    android:textColor="#000000"
                    android:textSize="15dip"
                    android:textStyle="bold" 
                    style="@style/bodytext"/>

                <TextView
                    android:id="@+id/dailyactivity_childlayout_TXT_timedetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dailyactivity_childlayout_TXT_time"
                    android:text="00:00:00"
                    android:textColor="#000000"
                    android:textSize="12dip"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dailyactivity_childlayout_REL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/dailyactivity_childlayout_TXT_diaperstatus"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:text="Diper Changed:"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dailyactivity_childlayout_TXT_diaperstatusdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dailyactivity_childlayout_TXT_diaperstatus"
                    android:text="Yes"
                    android:textColor="#000000"
                    android:textSize="12dip"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dailyactivity_childlayout_REL_milkquantity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/dailyactivity_childlayout_TXT_milkquantity"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:text="Milk Quantity:"
                    android:textColor="#000000"
                    android:textSize="15dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dailyactivity_childlayout_TXT_milkdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dailyactivity_childlayout_TXT_milkquantity"
                    android:text="1 ounce"
                    android:textColor="#000000"
                    android:textSize="12dip"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dailyactivity_childlayout_REL_sleepinghours"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/dailyactivity_childlayout_TXT_sleepinghours"
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:text="Sleeping hours:"
                    android:textColor="#000000"
                    android:textSize="15dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dailyactivity_childlayout_TXT_sleepinghoursdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dailyactivity_childlayout_TXT_sleepinghours"
                    android:text="1 hour"
                    android:textColor="#000000"
                    android:textSize="12dip"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>