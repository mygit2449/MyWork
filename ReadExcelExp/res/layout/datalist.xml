<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dailyactivity_childlayout_LIN_dailyactivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/datalist_REL_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/datalist_TXT_time"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:text="At:"
                android:textColor="#000000"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/datalist_TXT_timedetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/datalist_TXT_time"
                android:text="00:00:00"
                android:textColor="#000000"
                android:textSize="12dip"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>